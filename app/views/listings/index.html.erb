<h1>Laura's List</h1>

<a href="http://localhost:3000/home/new">Add a New Listing</a>

<ul>
	<% @listings.each do |listing| %>
	<li>
		<a href="/home<%= listing.id %>"> 
		Item: <%= listing.item %> 
		Price: $ <%= listing.price %> 
		Location: <%= listing.location %></a>

	| 
	<a href="http://localhost:3000/home/<%= listing.id %>/edit">
		Edit
		</a>
	|
	<%= link_to " Delete",
	"http://localhost:3000/home/#{listing.id}",
	:method => :delete, :confirm => "Are you sure you wish to delete this listing?"
	%></li>
		<% end %>
</ul>